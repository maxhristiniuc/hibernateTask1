<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entities.DanceEntity" table="Dance" schema="dbo" catalog="DB_forHibernateTask01">
        <id name="id">
            <column name="Id" sql-type="int"/>
            <generator class="native"/>
        </id>
        <property name="manId">
            <column name="Man_id" sql-type="int"/>
        </property>
        <property name="womanId">
            <column name="Woman_id" sql-type="int"/>
        </property>
        <property name="style">
            <column name="Style" sql-type="varchar(50)" length="50"/>
        </property>
    </class>
</hibernate-mapping>